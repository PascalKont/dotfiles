encryption = "gpg"
[gpg]
    recipient = "chezmoi-pkontsch"

{{ $path := joinPath .chezmoi.homeDir ".config/chezmoi/chezmoi-hosttype.sh" }}
{{- $stat := lstat $path }}
{{- $hosttype := "minimal" }}
{{- if and $stat (eq $stat.type "file") }}
  {{- $hosttype = output $path }}
{{- else }}
  {{- $choices := list "minimal" "full" "work" "external-work" "private" }}
  {{- $hosttype = promptChoiceOnce . "hosttype" "What type of host are you on" $choices $hosttype }}
{{- end }}

{{ $hyprlandscript := joinPath .chezmoi.sourceDir ".ignored/detect_hyprland.sh" }}
{{- $hyprland := "false" }}
{{- $hyprland = output $hyprlandscript }}

[data]
    hosttype = {{ $hosttype | quote }}
    hyprland = {{ $hyprland | quote }}

[git]
    autoPush = false

